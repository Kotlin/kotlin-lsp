<idea-plugin>
  <id>features/kotlin/core</id>
  <vendor>JetBrains</vendor>

  <extensions defaultExtensionNs="ls">
    <fileForModificationFactory language="kotlin"
                                implementationClass="com.jetbrains.ls.api.features.impl.kotlin.apiImpl.textEdits.KotlinFileForModificationFactory" />

    <markdownDocProvider language="kotlin"
                         implementationClass="com.jetbrains.ls.api.features.impl.kotlin.hover.LSKotlinMarkdownDocProvider"/>

    <completionItemKindProvider language="kotlin"
                                implementationClass="com.jetbrains.ls.api.features.impl.kotlin.completion.LSKotlinCompletionItemKindProvider"/>

  </extensions>
</idea-plugin>